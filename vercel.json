
{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "shared/**/*",
          "server/**/*",
          "client/**/*",
          "vite.config.ts",
          "package.json",
          "tsconfig.json",
          "tsconfig.vercel.json"
        ],
        "nodeVersion": "18.x"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/((?!api/.*).*)",
      "dest": "/index.html"
    }
  ]
}
